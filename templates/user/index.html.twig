{% extends 'base.html.twig' %}


{% block title %}Liste des utilisateurs{% endblock %}
{% block body %}
<h1> Liste des utilisateurs </h1>
<table border=1 width=75%>
<tr>
<TH>Nom </TH> 
<TH>Prénom </TH>
<TH> Email</TH>

</tr>
{% for user in users %}
<tr>
<td> {{user.getNom() }} </td> 
<td> {{user.getPrenom()}} </td>
<td> {{user.getEmail()}} </td>
<td>
 <a href= <a href= "{{path('app_user_edit',{'id':user.id})}}">Edit</a>
</td>
 
</tr> 

{% endfor %}
</table>
{% endblock %}


